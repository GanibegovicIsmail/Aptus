<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aptus.ProfilePage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>

        <VerticalStackLayout>
            <Image x:Name="ProfilePicture"
                   Source="defaultprofilepicture.png"
                   BackgroundColor="White"
                   HeightRequest="350"
                   WidthRequest="400" />
            <Button x:Name="ChangePictureButton"
                    Text="Change Profile Picture"
                    CornerRadius="0"
                    BackgroundColor="#364B51"
                    Opacity="0.5"
                    />
        </VerticalStackLayout>



        <StackLayout.Background>
            <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0.5,1">
                <GradientStop Color="#A9B3B9" Offset="0"></GradientStop>
                <GradientStop Color="#A9B3B9" Offset="0"></GradientStop>
            </LinearGradientBrush>
        </StackLayout.Background>
    </StackLayout>
</ContentPage>

